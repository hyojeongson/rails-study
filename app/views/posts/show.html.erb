<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="post-warpper">
  <p class="post-show-title"><%= @post.title %></p>
  <div class="post-show-content-warpper">
    <%= image_tag(@post.image.to_s) %>
    <div class="post-show-content-description">
      <%= @post.description %>
    </div>

    <% @post.post_items.each do |post_item| %>
      <div class="post-show-item-warpper">
        <div class="post-show-item-title">
          <%= post_item.title %>
        </div>
        <div id="postItemImagePreview">
          <%= image_tag(post_item.image.to_s) %>
        </div>
        <div class="post-show-content-description">
          <%= post_item.description %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="post-show-btn">
    <%= link_to '수정하기', edit_post_path(@post) %>
    <%= link_to '목록보기', home_index_path %>
  </div>
</div>

