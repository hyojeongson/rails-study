<h2 class="title">로그인</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :이메일, :class => 'label-title' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'field-form' %>
  </div>

  <div class="field">
    <%= f.label :비밀번호, :class => 'label-title' %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'field-form' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :기억하기, :class => 'label-title' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "로그인", :class => 'btn' %>
  </div>
<% end %>
