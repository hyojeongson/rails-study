<h2 class="title">회원가입</h2>
<div class="user-photo" id="imagePreview"></div>
<%= form_for(@user) do |f| %>
  <%= f.file_field :image, id: "uploadImage" %>
  <div class="field">
    <%= f.label :이메일, :class => 'label-title' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'field-form' %>
  </div>

  <div class="field">
    <%= f.label :비밀번호, :class => 'label-title' %>
    <% if @minimum_password_length %>
      <br /><em><%= @minimum_password_length %>자이상 영문 대 소문자, 숫자, 특수문자를 사용하세요.</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => 'field-form' %>
  </div>

  <div class="field">
    <%= f.label :비밀번호확인, :class => 'label-title' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'field-form' %>
  </div>

  <div class="field">
    <%= f.label :별명, :class => 'label-title' %><br />
    <%= f.text_field :nickname, :class => 'field-form' %>
  </div>
  <div class="actions">
    <%= f.submit "회원가입하기", :class => 'btn' %>
  </div>
<% end %>
